{
  "name": "nuxt-vant-mobile",
  "type": "module",
  "version": "0.6.0",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commitlint": "commitlint --edit",
    "typecheck": "nuxi typecheck",
    "release": "bumpp --commit --push --tag"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^4.0.0",
    "@nuxtjs/i18n": "^10.2.1",
    "nuxt": "^4.3.0",
    "pinia-plugin-persistedstate": "^4.7.1",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@iconify-json/carbon": "^1.2.18",
    "@nuxt/eslint": "^1.13.0",
    "@pinia/nuxt": "^0.11.3",
    "@unocss/eslint-plugin": "66.6.0",
    "@unocss/nuxt": "66.6.0",
    "@vant/nuxt": "^1.0.7",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "lint-staged": "^16.2.7",
    "pinia": "^3.0.4",
    "postcss-mobile-forever": "^5.0.0",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vant": "^4.9.22",
    "vue-tsc": "^3.2.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "magicast": "0.5.1"
      }
    },
    "allowedDeprecatedVersions": {
      "glob": "*",
      "inflight": "1",
      "are-we-there-yet": "2",
      "gauge": "3",
      "node-domexception": "1",
      "npmlog": "5",
      "rimraf": "3",
      "@types/parse-path": "7",
      "@oxc-parser/wasm": "0.60.0"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "resolutions": {
    "vite": "^7.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "browserslist": [
    "defaults"
  ]
}
